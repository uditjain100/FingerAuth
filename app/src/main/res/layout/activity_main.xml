<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/BurlyWood"
    tools:context=".MainActivity">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:backgroundTint="@color/BurlyWood"
        android:clickable="false"
        android:text="Enter"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/Black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:cornerRadius="25dp"
        app:rippleColor="@color/YellowGreen"
        app:strokeColor="@color/colorAccent"
        app:strokeWidth="4dp" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/first_view"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/first_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/ic_baseline_fingerprint_24" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/first_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Fingerprint Authenticator"
        android:textAlignment="center"
        android:textColor="@color/Black"
        android:textSize="40dp"
        android:textStyle="bold" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/second_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/first_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Place your finger"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold" />
</RelativeLayout>